void pattern22()
{

/*
-------------------------------------------------
22.    1
       0 1
       1 0 1
       0 1 0 1
       1 0 1 0 1
*/


    int n;
    cout<<"Enter a number: ";
    cin>>n;
    for(int row = 1; row <= n; ++row)
    {
        for (int col = 1; col <= row; ++col)
        {
            row % 2 == 1 && col % 2 == 1 || row % 2 == 0 && col % 2 == 0 ? cout<<"1 " : cout<<"0 ";
        }
        cout<<endl;
    }
    
}
