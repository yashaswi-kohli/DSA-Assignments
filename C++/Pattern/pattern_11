void pattern11()
{
/*
--------------------------------------------------
11.  * * * * *
      * * * *
       * * *
        * *
         *
*/


    int n;
    cout<<"Enter a number: ";
    cin>>n;

    for(int row = 1; row <= n; ++row)
    {
        for (int noOfSpace = 0; noOfSpace < n - (n - row + 1); noOfSpace++)
        {
            cout<<" ";
        }
        for (int col = 1; col <= n - row + 1; ++col)
        {
            cout<<"* ";
        }
         cout<<endl;
    
    }
    
}
