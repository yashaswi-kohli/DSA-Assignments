void pattern3()
{

/*
--------------------------------------------------

3.  *****
    ****
    ***
    **
    *
*/

    int n;
    cout<<"Enter a number: ";
    cin>>n;

    for(int row = 1; row <= n; ++row)
    {
        for(int col = 1; col <= n-row+1; col++)
        {
            cout<<"* ";
        }
        cout<<endl;
    }
    
}
