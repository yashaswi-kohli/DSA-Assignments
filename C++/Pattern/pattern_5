void pattern5()
{

/*
--------------------------------------------------
5.  *
    **
    ***
    ****
    *****
    ****
    ***
    **
    *
*/

    int n;
    cout<<"Enter a number: ";
    cin>>n;

    for(int row = 1; row <= (2*n) - 1; ++row)
    {
        int c = row > n ? n - (row - n) : row;
        {
            for (int col = 1; col <= c; ++col)
            {
                cout<<"* ";
            }
            cout<<endl;
        }
    }
    
}
