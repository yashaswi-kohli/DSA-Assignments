void pattern2()
{

/*
-------------------------------------------------
2.  *
    **
    ***
    ****
    *****
*/
    int n;
    cout<<"Enter a number: ";
    cin>>n;

    for(int i = 1; i <= n; ++i)
    {
        for(int j = 0; j <= i; j++)
        {
            cout<<"*";
        }
        cout<<endl;
    }

}
