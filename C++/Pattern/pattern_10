void pattern10()
{

/*
--------------------------------------------------
10.      *
        * *
       * * *
      * * * *
     * * * * *
*/


    int n;
    cout<<"Enter a number: ";
    cin>>n;

    for(int row = 1; row <= n; ++row)
    {
        for (int noOfSpace = 0; noOfSpace < n-row; noOfSpace++)
        {
            cout<<" ";
        }
        for (int col = 1; col <= row; ++col)
        {
            cout<<"* ";
        }
         cout<<endl;
    
    }

}
